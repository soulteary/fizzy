<% if card.postponed? %>
  <div class="card__closed <%= "card__closed--system" if card.postponed_by&.system? %>">
    <span class="card__closed-title" data-text="<%= t('columns.not_now') %>"><%= t("columns.not_now") %></span>
    <strong class="card__closed-date"><%= card.postponed_at.strftime("%b %d, %Y") %></strong>
    <span class="card__closed-by-line"><%= t("cards.display.stamp.by") %> <span class="card__closed-by"><%= card.postponed_by&.familiar_name %></span></span>
  </div>
<% end %>

<% if card.closed? %>
  <div class="card__closed">
    <span class="card__closed-title" data-text="<%= t('columns.done') %>"><%= t("columns.done") %></span>
    <strong class="card__closed-date"><%= card.closed_at.strftime("%b %d, %Y") %></strong>
    <span class="card__closed-by-line"><%= t("cards.display.stamp.by") %> <span class="card__closed-by"><%= card.closed_by.familiar_name %></span></span>
  </div>
<% end %>
